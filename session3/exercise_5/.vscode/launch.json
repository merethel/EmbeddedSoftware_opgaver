    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "cppvsdbg", //cppvsdbg is the debugger that is installed with Visual Studio. Alternatively "lldb" can be used
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/build/Debug/MyProject.exe", //The path to the exefile. If it does not work, your path might be "${workspaceFolder}/build/MyProject.exe" 

            "args": [],
            "console": "integratedTerminal", // This makes the program open in a new terminal instead of using "DEBUG CONSOLE". This is necesary in order to take inputs.
            "cwd": "${workspaceFolder}"
        }
    ]
}